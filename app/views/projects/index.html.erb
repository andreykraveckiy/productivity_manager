<%provide(:title, "Projects") %>
<h1>Simple todo lists</h1>
<h2>
  from 
  <% if current_user.name.nil? %>
    <%= current_user.email %>
  <% else %>
    <%= current_user.name %>
  <% end %>
</h2>
<%= link_to "Log out", destroy_user_session_path, method: :delete %>
<div class="center">
  <% if @projects.any? %>
    <div class="projects">
      <%= render @projects %>
    </div>
  <% end %>   
  <%= link_to  " Add TODO List", new_project_path, method: :get, class: "btn btn-large btn-primary fa fa-plus" %> 
</div> 
