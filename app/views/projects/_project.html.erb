<li>
  <div class="title">  
    <span class="col-md-1">   
      <%= link_to content_tag('span'," ", class: 'fa fa-sticky-note-o'), '#' %>
    </span>  
    <span class="col-md-9">
      <%= project.name %>  
    </span >
    <span class="col-md-2">
      <%= link_to content_tag('span'," ", class: 'fa fa-pencil'), edit_project_path(project), class: 'act' %>
      <%= link_to content_tag('span'," ", class: 'fa fa-trash'), project, method: :delete, data: { confirm: "You sure?" }, title: project.name, class: 'act' %>     
    </span>
  </div>
  <div>
    <%= render 'tasks/task_form', project: project, task: @task%>
  </div>
    <% if project.tasks.any? %>
      <%= render 'tasks/tasks', project: project %>
    <% end %>
</li>