<tr>
  <td >
    <%= link_to ' ', done_project_task_path(project, task), method: :put, remote: true, class: 'fa fa-square-o' %>
  </td>
  <td />
  <td class="col-md-9" style="text-align: left">
    <%= link_to "#{task.content}", project_task_path(project, task) %> 
  </td>
  <td class="col-md-2">
    <%= link_to "", down_priority_project_task_path(project, task), method: :put, class: 'action fa fa-sort-down', remote: true %>
    <%= link_to '', up_priority_project_task_path(project, task), method: :put, class: 'action fa fa-sort-up', remote: true %>
    <%= link_to "", edit_project_task_path(project, task), class: 'action fa fa-pencil' %>
    <%= link_to "", [project, task], method: :delete, data: { confirm: "You sure?" }, title: project.name, class: 'action fa fa-trash-o', remote: true %>
  </td>
</tr>